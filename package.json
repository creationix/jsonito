{
  "name": "jsonito",
  "repository": {
    "type": "git",
    "url": "https://github.com/creationix/jsonito"
  },
  "version": "0.1.3",
  "description": "El sobrinito de JSON",
  "main": "./dist/jsonito.cjs",
  "module": "./dist/jsonito.js",
  "type": "module",
  "types": "./dist/jsonito.d.ts",
  "exports": {
    "import": "./dist/jsonito.js",
    "require": "./dist/jsonito.cjs"
  },
  "files": [
    "dist/*",
    "README.md"
  ],
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build": "npm run build:cjs && mv dist/jsonito.js dist/jsonito.cjs && npm run build:esm && biome format --fix dist && biome lint --fix dist",
    "format": "biome format --fix src && biome lint --fix src",
    "lint": "biome lint src",
    "test": "bun test"
  },
  "author": "Tim Caswell <tim@creationix.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.3"
  }
}